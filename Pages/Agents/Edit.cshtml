@page
@model TinyGenerator.Pages.Agents.EditModel
@{
    Layout = "_Layout";
}

<h2>Edit Agent</h2>

<form method="post">
    <input type="hidden" asp-for="Agent.Id" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Agent.Name" class="form-control" />
            <span asp-validation-for="Agent.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Role</label>
            @{ 
                var roles = new List<string> { "coordinator", "writer", "story_evaluator", "musician", "sfx", "ambient", "tts", "mixer" };
                if (!string.IsNullOrWhiteSpace(Model.Agent.Role) && !roles.Contains(Model.Agent.Role)) { roles.Insert(0, Model.Agent.Role); }
            }
            <select asp-for="Agent.Role" class="form-select">
                @foreach (var r in roles)
                {
                    <option value="@r" selected="@(r == Model.Agent.Role ? "selected" : null)">@r</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-8">
            <label class="form-label">Model (optional)</label>
            <select asp-for="SelectedModelName" class="form-select">
                <option value="">-- none --</option>
                @foreach (var m in Model.Models)
                {
                    <option value="@m.Name" selected="@((Model.SelectedModelName == m.Name) ? "selected" : null)">@m.Name @((!string.IsNullOrWhiteSpace(m.Provider)) ? "(" + m.Provider + ")" : "")</option>
                }
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-center">
            <div class="form-check">
                <input asp-for="Agent.IsActive" class="form-check-input" />
                <label asp-for="Agent.IsActive" class="form-check-label">Active</label>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Voice (optional)</label>
            <select asp-for="Agent.VoiceId" class="form-select">
                <option value="">-- none --</option>
                @foreach (var v in Model.Voices)
                {
                    <option value="@v.Id" selected="@(v.Id == Model.Agent.VoiceId ? "selected" : null)">@v.Name @((!string.IsNullOrWhiteSpace(v.Model)) ? "(" + v.Model + ")" : "")</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Skills</label>
            <select asp-for="SelectedSkills" multiple class="form-control chosen-select" id="agent_skills" name="SelectedSkills">
                @foreach (var s in Model.AvailableSkills)
                {
                    if (Model.SelectedSkills != null && Model.SelectedSkills.Contains(s))
                    {
                        <option value="@s" selected>@s</option>
                    }
                    else
                    {
                        <option value="@s">@s</option>
                    }
                }
            </select>
            <small class="form-text text-muted">Seleziona le skill consentite per questo agente. Verranno salvate come array JSON.</small>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Prompt</label>
        <textarea asp-for="Agent.Prompt" class="form-control" rows="2"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Instructions</label>
        <textarea asp-for="Agent.Instructions" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">JSON Response Format</label>
        <input asp-for="Agent.JsonResponseFormat" class="form-control" placeholder="es. full_evaluation.json" />
        <small class="form-text text-muted">Nome del file schema JSON in response_formats/ per structured output (opzionale)</small>
    </div>
    <div class="mb-3">
        <label class="form-label">Execution Plan (JSON or text)</label>
        <textarea asp-for="Agent.ExecutionPlan" class="form-control" rows="4"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Config (JSON)</label>
        <textarea asp-for="Agent.Config" class="form-control" rows="4"></textarea>
    </div>
    <!-- Active moved up next to Model select -->
    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Agent.Notes" class="form-control" rows="3"></textarea>
    </div>
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="/Agents/Index">Cancel</a>
</form>

@section Scripts {
    <link href="/lib/chosen/chosen.min.css" rel="stylesheet" />
    <script src="/lib/chosen/chosen.jquery.min.js"></script>
    <script>
        (function(){
            function initChosen() {
                try {
                    if (window.jQuery && typeof jQuery.fn.chosen === 'function') {
                        $('#agent_skills').chosen({ placeholder_text_multiple: 'Select skills', no_results_text: 'No skill', width: '100%' });
                    } else {
                        // Retry shortly until the chosen plugin becomes available
                        setTimeout(initChosen, 100);
                    }
                } catch (e) {
                    console.warn('Failed to initialize chosen for #agent_skills', e);
                }
            }
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initChosen);
            } else {
                initChosen();
            }
        })();
    </script>
}
