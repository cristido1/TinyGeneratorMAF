@page
@model TinyGenerator.Pages.Logs.LiveMonitorModel
@{
    ViewData["Title"] = "Live Monitor";
    ViewData["PageDescription"] = "Monitoraggio in tempo reale dei log e dell'attività";
}

<style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    html, body { width: 100%; height: 100%; }
    
    body {
        font-family: 'Roboto Mono', 'Monaco', 'Courier New', monospace;
        font-size: 14px;
        line-height: 1.5;
        background: #0a0e0a url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="%23003d2e" stroke-width="0.5" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="%230a0e0a"/><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        background-attachment: fixed;
        color: #00ffbf;
        overflow-x: hidden;
        position: relative;
    }
    
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(0deg, rgba(0, 255, 191, 0.03), rgba(0, 255, 191, 0.03) 2px, transparent 2px, transparent 4px);
        pointer-events: none;
        z-index: 9999;
    }
    
    .container { max-width: 1400px; margin: 0 auto; padding: 24px; position: relative; z-index: 1; }
    
    .title {
        font-family: 'Orbitron', monospace;
        font-size: 28px;
        font-weight: 900;
        color: #00ffbf;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-shadow: 0 0 10px #00ffbf, 0 0 20px #00cc99;
    }
    
    .logs-container {
        background: rgba(10, 14, 10, 0.8);
        border: 2px solid #00cc99;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 255, 191, 0.2), inset 0 0 20px rgba(0, 255, 191, 0.05);
        height: 600px;
        display: flex;
        flex-direction: column;
    }
    
    .logs-header {
        display: flex;
        padding: 12px 16px;
        background: rgba(0, 204, 153, 0.1);
        border-bottom: 1px solid #00cc99;
        font-size: 11px;
        color: #00ffbf;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        gap: 16px;
        align-items: center;
    }
    
    .logs-header span { flex-shrink: 0; }
    .logs-header .timestamp { width: 160px; }
    .logs-header .level { width: 110px; }
    .logs-header .category { width: 140px; }
    .logs-header .message { flex: 1; }
    
    .logs-content {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 0;
    }
    
    .logs-content::-webkit-scrollbar { width: 8px; }
    .logs-content::-webkit-scrollbar-track { background: rgba(0, 255, 191, 0.05); }
    .logs-content::-webkit-scrollbar-thumb { background: #00cc99; border-radius: 4px; }
    .logs-content::-webkit-scrollbar-thumb:hover { background: #00ffbf; box-shadow: 0 0 8px #00ffbf; }
    
    .log-entry {
        display: flex;
        align-items: center;
        padding: 10px 16px;
        border-bottom: 1px solid rgba(0, 204, 153, 0.2);
        transition: all 0.2s ease;
        gap: 12px;
        position: relative;
        overflow: hidden;
        font-size: 13px;
    }
    
    .log-entry:hover {
        background: rgba(0, 255, 191, 0.08);
        transform: translateY(-2px);
        box-shadow: inset 0 0 12px rgba(0, 255, 191, 0.1), 0 4px 12px rgba(0, 255, 191, 0.15);
        border-bottom-color: rgba(0, 255, 191, 0.4);
    }
    
    .log-icon { width: 20px; height: 20px; flex-shrink: 0; font-size: 12px; }
    .log-timestamp { width: 160px; flex-shrink: 0; font-size: 11px; color: #00ffbf; opacity: 0.8; }
    .log-level { width: 110px; flex-shrink: 0; font-size: 10px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px; padding: 4px 8px; border-radius: 2px; text-align: center; }
    .log-category { width: 140px; flex-shrink: 0; font-size: 10px; color: #00ffbf; text-transform: uppercase; opacity: 0.7; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    .log-message { flex: 1; font-size: 12px; color: #00ffbf; word-break: break-word; white-space: pre-wrap; }
    
    .log-level.info { background: rgba(0, 255, 191, 0.2); border: 1px solid #00cc99; color: #00ffbf; box-shadow: 0 0 6px rgba(0, 255, 191, 0.3); }
    .log-level.success { background: rgba(0, 255, 100, 0.2); border: 1px solid #00ff66; color: #00ff99; box-shadow: 0 0 6px rgba(0, 255, 100, 0.3); }
    .log-level.warning { background: rgba(255, 200, 0, 0.2); border: 1px solid #ffd700; color: #ffed4e; box-shadow: 0 0 6px rgba(255, 200, 0, 0.3); }
    .log-level.error { background: rgba(255, 50, 50, 0.2); border: 1px solid #ff4444; color: #ff6666; box-shadow: 0 0 6px rgba(255, 50, 50, 0.3); }
    
    .log-entry.entry-info { border-left: 3px solid #00cc99; }
    .log-entry.entry-success { border-left: 3px solid #00ff66; }
    .log-entry.entry-warning { border-left: 3px solid #ffd700; }
    .log-entry.entry-error { border-left: 3px solid #ff4444; }
    
    /* Raw JSON display styles */
    .log-message.raw-json-header {
        font-weight: bold;
        color: #ffd700;
        text-shadow: 0 0 6px #ffd700;
    }
    
    .log-message.raw-json-content {
        font-family: 'Roboto Mono', monospace;
        font-size: 11px;
        white-space: nowrap !important;
        overflow-x: auto;
        overflow-y: hidden;
        max-height: 120px;
        padding: 8px;
        background: rgba(0, 61, 46, 0.4);
        border: 1px solid rgba(0, 204, 153, 0.3);
        border-radius: 4px;
        line-height: 1.8;
    }
    
    .log-message.raw-json-content::-webkit-scrollbar { height: 6px; }
    .log-message.raw-json-content::-webkit-scrollbar-track { background: rgba(0, 255, 191, 0.05); }
    .log-message.raw-json-content::-webkit-scrollbar-thumb { background: #00cc99; border-radius: 3px; }
    .log-message.raw-json-content::-webkit-scrollbar-thumb:hover { background: #00ffbf; }
    
    .logs-placeholder { display: flex; align-items: center; justify-content: center; height: 100%; color: #00cc99; font-size: 14px; text-transform: uppercase; letter-spacing: 2px; opacity: 0.6; }
    
    .stats-panel {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-top: 24px;
    }
    
    .stat-box {
        background: rgba(0, 204, 153, 0.05);
        border: 1px solid #00cc99;
        border-radius: 4px;
        padding: 16px;
        box-shadow: inset 0 0 12px rgba(0, 255, 191, 0.05);
        transition: all 0.3s ease;
    }
    
    .stat-box:hover {
        background: rgba(0, 204, 153, 0.1);
        box-shadow: 0 0 12px rgba(0, 255, 191, 0.2), inset 0 0 12px rgba(0, 255, 191, 0.1);
    }
    
    .stat-label { font-size: 10px; color: #00cc99; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 8px; font-weight: bold; }
    .stat-value { font-size: 24px; font-weight: bold; color: #00ffbf; text-shadow: 0 0 8px #00ffbf; font-family: 'Orbitron', monospace; }
    .stat-value.info { color: #00ffbf; }
    .stat-value.success { color: #00ff99; }
    .stat-value.warning { color: #ffed4e; }
    .stat-value.error { color: #ff6666; }
    
    /* Button styles */
    .btn {
        padding: 10px 16px;
        border: 1px solid #00cc99;
        border-radius: 4px;
        font-family: 'Roboto Mono', monospace;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    
    .btn-export {
        background: rgba(0, 204, 153, 0.1);
        color: #00ffbf;
        text-shadow: 0 0 4px #00ffbf;
    }
    
    .btn-export:hover {
        background: rgba(0, 204, 153, 0.2);
        box-shadow: 0 0 12px rgba(0, 255, 191, 0.3);
    }
    
    .btn-clear {
        background: rgba(255, 100, 100, 0.1);
        color: #ff6666;
        text-shadow: 0 0 4px #ff6666;
    }
    
    .btn-clear:hover {
        background: rgba(255, 100, 100, 0.2);
        box-shadow: 0 0 12px rgba(255, 100, 100, 0.3);
    }
</style>

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Share+Tech+Mono&display=swap" rel="stylesheet">

<div class="container">
    <div style="margin-bottom: 16px; display: flex; gap: 8px;">
        <button id="exportBtn" class="btn btn-export" title="Export last 100 log entries to text file">
            <i class="bi bi-download"></i> Export Logs
        </button>
        <button id="clearBtn" class="btn btn-clear" title="Clear all logs">
            <i class="bi bi-trash"></i> Clear
        </button>
    </div>
    
    <div class="logs-container">
        <div class="logs-header">
            <span class="timestamp">TIME</span>
            <span class="level">LEVEL</span>
            <span class="category">CATEGORY</span>
            <span class="message">MESSAGE</span>
        </div>
        <div class="logs-content" id="logs-content">
            <div class="logs-placeholder">▬ AWAITING DATA ▬</div>
        </div>
    </div>

    <div class="stats-panel">
        <div class="stat-box">
            <div class="stat-label">Total Events</div>
            <div class="stat-value info" id="stat-total">0</div>
        </div>
        <div class="stat-box">
            <div class="stat-label">Info Messages</div>
            <div class="stat-value info" id="stat-info">0</div>
        </div>
        <div class="stat-box">
            <div class="stat-label">Success</div>
            <div class="stat-value success" id="stat-success">0</div>
        </div>
        <div class="stat-box">
            <div class="stat-label">Warnings</div>
            <div class="stat-value warning" id="stat-warning">0</div>
        </div>
        <div class="stat-box">
            <div class="stat-label">Errors</div>
            <div class="stat-value error" id="stat-error">0</div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/signalr.min.js"></script>
<script>
    // State management
    let stats = { total: 0, info: 0, success: 0, warning: 0, error: 0 };
    
    const logsContent = document.getElementById('logs-content');
    
    const iconSVG = { info: '⊙', success: '✓', warning: '⚠', error: '✕' };
    
    function addLogEntry(level = 'info', message = '', category = 'System', extraClass = '') {
        const placeholder = logsContent.querySelector('.logs-placeholder');
        if (placeholder) placeholder.remove();
        
        const entry = document.createElement('div');
        entry.className = `log-entry entry-${level}`;
        
        const now = new Date();
        const timestamp = now.toLocaleTimeString('it-IT', { hour12: false, hour: '2-digit', minute: '2-digit', second: '2-digit' }) + '.' + String(now.getMilliseconds()).padStart(3, '0');
        
        const messageClass = extraClass ? `log-message ${extraClass}` : 'log-message';
        
        entry.innerHTML = `
            <div class="log-icon">${iconSVG[level] || '·'}</div>
            <div class="log-timestamp">${timestamp}</div>
            <div class="log-level ${level}">${level.toUpperCase()}</div>
            <div class="log-category">[${category}]</div>
            <div class="${messageClass}">${escapeHtml(message)}</div>
        `;
        
        logsContent.insertBefore(entry, logsContent.firstChild);
        
        stats.total++;
        stats[level]++;
        updateStats();
        
        while (logsContent.children.length > 500) {
            logsContent.removeChild(logsContent.lastChild);
        }
    }
    
    function clearLogs() {
        logsContent.innerHTML = '<div class="logs-placeholder">▬ AWAITING DATA ▬</div>';
        stats = { total: 0, info: 0, success: 0, warning: 0, error: 0 };
        updateStats();
    }
    
    function updateStats() {
        document.getElementById('stat-total').textContent = stats.total;
        document.getElementById('stat-info').textContent = stats.info;
        document.getElementById('stat-success').textContent = stats.success;
        document.getElementById('stat-warning').textContent = stats.warning;
        document.getElementById('stat-error').textContent = stats.error;
    }
    
    function escapeHtml(text) {
        const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
        return text.replace(/[&<>"']/g, m => map[m]);
    }
    
    // SignalR connection
    const connection = new signalR.HubConnectionBuilder()
        .withUrl('/progressHub')
        .withAutomaticReconnect()
        .build();
    
    connection.on('ProgressAppended', (id, message, extraClass) => {
        addLogEntry('info', message, 'Progress', extraClass || '');
    });
    
    connection.on('ProgressCompleted', (id, result) => {
        addLogEntry('success', result || 'Completed', 'Progress');
    });
    
    connection.on('AgentActivityStarted', (agentId, agentName, status, testType) => {
        addLogEntry('info', `${agentName}: ${status}`, 'Agent');
    });
    
    connection.on('AgentActivityEnded', (agentId) => {
        addLogEntry('success', `Agent completed: ${agentId}`, 'Agent');
    });
    
    // Load initial logs
    fetch('/api/logs/recent?limit=50')
        .then(r => r.json())
        .then(logs => {
            logs.reverse().forEach(log => {
                addLogEntry(log.level.toLowerCase(), log.message, log.category);
            });
        })
        .catch(e => console.warn('Failed to load initial logs', e));
    
    connection.start()
        .then(() => console.log('Live monitor connected'))
        .catch(e => console.error('SignalR error', e));
    
    window.addLog = addLogEntry;
    window.clearAllLogs = clearLogs;
    window.getStats = () => stats;
    
    // Export functionality
    document.getElementById('exportBtn').addEventListener('click', function() {
        // Get all log entries (in reverse order, so we need to reverse them)
        const entries = Array.from(logsContent.querySelectorAll('.log-entry')).reverse();
        
        // Take last 100 entries
        const lastEntries = entries.slice(0, 100);
        
        // Build text content
        let content = `LOG EXPORT - ${new Date().toLocaleString('it-IT')}\n`;
        content += `Total entries: ${lastEntries.length}\n`;
        content += '='.repeat(80) + '\n\n';
        
        lastEntries.forEach(entry => {
            const timestamp = entry.querySelector('.log-timestamp')?.textContent || '';
            const level = entry.querySelector('.log-level')?.textContent || '';
            const category = entry.querySelector('.log-category')?.textContent || '';
            const message = entry.querySelector('.log-message')?.textContent || '';
            
            content += `[${timestamp}] [${level}] ${category} ${message}\n\n`;
        });
        
        // Create blob and download
        const blob = new Blob([content], { type: 'text/plain;charset=utf-8' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = `logs_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}.txt`;
        link.click();
        
        // Show notification
        alert(`Exported ${lastEntries.length} log entries`);
    });
    
    // Clear button
    document.getElementById('clearBtn').addEventListener('click', function() {
        if (confirm('Clear all logs?')) {
            clearLogs();
        }
    });
</script>
